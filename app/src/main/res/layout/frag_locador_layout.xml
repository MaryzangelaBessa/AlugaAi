<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragLocador">

    <LinearLayout
        android:id="@+id/contentLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/addImovelLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/addImovelBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCLickCreateCadastro"
                android:text="@string/btn_add" />

            <Button
                android:id="@+id/BtnCurrentLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:onClick="onCLickShowCurrentLocation"
                android:text="Localização Atual" />

            <Button
                android:id="@+id/BtnPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCLickPerfilUsuario"
                android:text="Perfil" />

            <Button
                android:id="@+id/BtnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCLickLogout"
                android:text="Sair" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/listaLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>