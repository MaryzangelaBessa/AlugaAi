<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context=".VerImovel">

    <TextView
        android:id="@+id/textNome3"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="AlugaAi"
        android:textColor="#000000"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="106dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Fotos" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc"
        android:layout_width="405dp"
        android:layout_height="200dp"
        android:layout_margin="5dp">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textNome"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Nome Proprietário" />

        <TextView
            android:id="@+id/proprietario"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="#E4E1E1"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Endereço" />

        <TextView
            android:id="@+id/endereco"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="#E4E1E1"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Telefone" />

        <TextView
            android:id="@+id/telefone"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="#E4E1E1"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:text="Preço" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:text="Contrato em dias" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/preco"
            android:layout_width="167dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="#E4E1E1"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tempo"
            android:layout_width="167dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="#E4E1E1"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:text="Banheiros" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Quartos" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/banheiros"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="#E4E1E1"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/quartos"
            android:layout_width="167dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="#E4E1E1"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Possui Garagem?" />

        <TextView
            android:id="@+id/garagem"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="#E4E1E1"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

</LinearLayout>